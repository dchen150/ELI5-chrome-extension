{
  "name": "Silly Goose",
  "description": "Quack quack!",
  "version": "0.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Silly Goose",
    "default_icon": {
      "16": "/images/mr_goose16.png",
      "32": "/images/mr_goose32.png",
      "48": "/images/mr_goose48.png",
      "128": "/images/mr_goose128.png"
    }
  },
  "icons": {
    "16": "/images/mr_goose16.png",
    "32": "/images/mr_goose32.png",
    "48": "/images/mr_goose48.png",
    "128": "/images/mr_goose128.png"
  },
  "manifest_version": 2
}
